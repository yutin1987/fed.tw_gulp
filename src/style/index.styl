.banner
  width: 100%
  min-height: 280px
  background: center center
  background-size: cover

.action
  position: relative
  .thumb
    img
        width: 100%
  .recommend
    width: 100%
    text-align: center
    i
      margin: 6px
      margin-top: 12px
  .join
    text-align: right
  .name
    font-size: 200%
  form
    button, input
      width: 100%
      display: inline-block
      margin-top: 3px
    input
      width: 100%
      max-width: 239px
      margin-right: 3px
      &.join-name
        max-width: 119px
    button
      max-width: 99px
    &.had-email input
      display: none

.filter
  .btn
    margin-right: 2px
    float: right

@media all and (max-width: 992px)
  .action
    .join
      input
        &.join-name, &.join-email
          max-width: none
  .filter
    .btn
      margin-top: 2px

#register
  .form-group
    padding: 5px 0px

#scenic,
#forums
  min-height: 600px

#scenic
  .scenic
    position: relative
    margin-top: 9px
    padding-bottom: 9px
    border-bottom: 1px solid #eee
    &:first-child
      margin-top: 58px
    .details
      position: static
    .like
      position: absolute
      right: 2px
      bottom: 8px
      span
        margin-left: 3px

#forums
  .feedback
    margin-top: 9px
    padding-bottom: 18px
    border-bottom: 1px solid #eee
    position: relative
    color: #8B8B8C
    margin-left: 42px
    &:first-child
      margin-top: 58px
  .icon
    background: #FFF
    width: 38px
    height: 38px
    border-top-left-radius: 12px
    border-bottom-right-radius: 12px
    line-height: 38px
    text-align: center
    position: absolute
    left: -42px
  .content,
  .name
    font-size: 11px
    i
      margin-right: 3px
  .time
    font-size: 8px
    position: absolute
    right: 0
    bottom: 9px

#photo
  height: 216px
  .album
    img
      margin: 46px 0 0 18px
      &:first-child
        margin-left: 0px

.tags
  margin: 0
  margin-top: -12px
  margin-bottom: 24px
  padding: 0
  list-style:none
  li, a
    float: right
    height:24px
    line-height:24px
    position:relative
    font-size:11px
  a
    margin-left:20px
    padding:0 10px 0 12px
    background: #3c763d
    color:#fff
    text-decoration:none
    border-bottom-right-radius:4px
    border-top-right-radius:4px
    &:before
      content:""
      float:left
      position:absolute
      top:0
      left:-12px
      width:0
      height:0
      border-color:transparent #3c763d transparent transparent
      border-style:solid
      border-width:12px 12px 12px 0    
    &:after
      content:""
      position:absolute
      top:10px
      left:0
      float:left
      width:4px
      height:4px
      border-radius:2px
      background:#fff
      box-shadow:-1px -1px 2px #004977

.footer
  padding: 12px 0
  text-align: center
